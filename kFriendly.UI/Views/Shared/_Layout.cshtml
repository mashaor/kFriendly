                </ul>
            </div>     
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="text-sm-right">&copy; @DateTime.Now.Year - KFriendly</div>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
